<style>
  .popupShow {
    display: none !important;
  }
  .mainPopup{
    background-color: #fff;
    background-image: url('{{ section.settings.popup_image | image_url: width: 835 }}');
    background-repeat: no-repeat; 
    background-size: cover; 
    background-position: center;
  }
  .pupupTwoTitle{
    font-family: 'Playfair Display', serif;
    font-size: 72px;
    font-style: italic;
    font-weight: 500;
    color: #ea5329;
  }
  .pupupTwoDescription{
    font-family: 'Playfair Display', serif;
    font-size: 72px;
    font-weight: 500;
    color: #3c1605;
    line-height: 1.2;
    padding: 0;
    margin-bottom: 20px;
  }
  .pupupTwobutton{
    font-family: 'Poppins', sans-serif;
    font-size: 35px;
    font-weight: 400;
    color: #fff;
    line-height: 1.2;
    padding: 15px 10px;
    width: 100%;
  }
    @media screen and (max-width: 600px) {
    .mainPopup {
      background-image: url('{{ section.settings.popup_image_mobile | image_url: width: 450 }}');
    }
  }
</style>
<div
  class="bg-[url('https://chocolate-eight.vercel.app/assets/images/footer-bg.svg')] bg-repeat bg-center bg-[#FFF3EF] py-16 overflow-hidden"
>
  <div class="container m-auto grid grid-cols-4 gap-5 tablet:px-3 tablet:grid-cols-1">
    <div>
      <div class="">
        <img src="{{ section.settings.logo | img_url: '200x200' }}" alt="">
        <p class="text-content text-[20px] leading-[30px] font-content font-light mt-3">
          {{ section.settings.about_text }}
        </p>
      </div>
    </div>
    <div>
      <h2 class="text-[30px] font-title mb-8">{{ section.settings.help_info_text }}</h2>
      <ul class="footer-menu">
        {% for link in linklists[section.settings.help_menu].links -%}
          <li>
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {%- endfor %}
      </ul>
    </div>
    <div>
      <h2 class="text-[30px] font-title mb-8">{{ section.settings.quick_shop_text }}</h2>
      <ul class="footer-menu">
        {% for link in linklists[section.settings.quick_menu].links -%}
          <li>
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {%- endfor %}
      </ul>
    </div>
    <div>
      <h2 class="text-[30px] font-title mb-8">{{ section.settings.contact_us }}</h2>
      <ul class="footer-menu">
        <li>{{ section.settings.address }}</li>
        <li>{{ section.settings.phone }}</li>
        <li>{{ section.settings.email }}</li>
      </ul>
    </div>
  </div>
  <div class="flex gap-5 justify-center">
    <img
      src="{{ section.settings.certificate01 | img_url: '' }}"
      alt=""
      width="120px"
      height="120px"
      class=" w-[120px] h-[120px]"

    ><img
      src="{{ section.settings.certificate02 | img_url: '' }}"
      alt=""
      width="120px"
      height="120px"
      class=" w-[120px] h-[120px]"
    >
  </div>
  <div class="w-[685px] m-auto text-center pt-10 phone:px-4 phone:w-full">
    <h2 class="text-[45px] text-title phone:text-[35px]">{{ section.settings.newsletter_text }}</h2>
    <div class="relative mt-5">
      <form action="">
        <input
          class="placeholder:text-content placeholder:text-[20px] bg-transparent w-full border-transparent mt-6 border-b-2 border-b-primary p-3 focus:outline-none focus:bg-transparent active:bg-transparent autofill:bg-transparent"
          type="text"
          placeholder="Your Email"
          name="email"
        >
        <button type="submit">
          <svg
            stroke="currentColor"
            fill="currentColor"
            stroke-width="0"
            viewBox="0 0 1024 1024"
            type="submit"
            class="absolute top-[50%] right-0 cursor-pointer"
            height="24"
            width="24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M869 487.8L491.2 159.9c-2.9-2.5-6.6-3.9-10.5-3.9h-88.5c-7.4 0-10.8 9.2-5.2 14l350.2 304H152c-4.4 0-8 3.6-8 8v60c0 4.4 3.6 8 8 8h585.1L386.9 854c-5.6 4.9-2.2 14 5.2 14h91.5c1.9 0 3.8-.7 5.2-2L869 536.2a32.07 32.07 0 0 0 0-48.4z">
            </path>
          </svg>
        </button>
      </form>
    </div>
  </div>
  <div class="mt-[40px] text-center">
    <p>{{ section.settings.info_text }}</p>
  </div>
</div>

<div class="bg-[#FFE4DB] text-center py-5">
  <p class="text-[20px] capitalize font-light">{{ section.settings.copy_right_text }}</p>
</div>

{% if section.settings.popup == 'true' %}

  {% if section.settings.popupTemplate == "template1" %}
  <div
    class="popup"
  >
    <div class="before:w-full before:h-[100vh] before:fixed before:left-0 before:top-0 before:z-0 before:bg-black/50">
      <div class="fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-50 tablet:w-full">
        <div
          class="bg-white max-w-[832.74px] m-auto h-auto flex items-center justify-items-center text-center p-[10px] tablet:max-w-[95%] tablet:h-auto mainPopup"
          style=""
        >
          <div class="border-[5px] border-secondary p-[60px] tablet:p-[10px] ">
            <p class="text-[30px] tablet:text-[22px]">
              {{ section.settings.poppup_title }}
            </p>
            <h2 class="text-[32px] font-bold py-5 tablet:text-[22px]">{{ section.settings.poppup_description }}</h2>
            <button class="button" id="isPopup">{{ section.settings.poppup_button_text }}</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}


   {% if section.settings.popupTemplate == "template2" %}
  <div
    class="popup"
  >
    <div class="before:w-full before:h-[100vh] before:fixed before:left-0 before:top-0 before:z-0 before:bg-black/50 phone:p-3">
      <div class="fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-50 tablet:w-full">
        <div
          class="bg-white w-[832.74px] m-auto h-[420px] phone:w-full phone:h-[95dvh] flex items-center justify-items-center p-[10px] tablet:max-w-[95%] tablet:h-auto mainPopup"
        >
          <div class="border-[5px p-[60px] tablet:p-[10px]">
            <p class="text-[30px] tablet:text-[22px] pupupTwoTitle">
              {{ section.settings.poppup_title }}
            </p>
            <h2 class="py-5 tablet:text-[22px] pupupTwoDescription">{{ section.settings.poppup_description }} collection</h2>
            <button class="button pupupTwobutton" id="isPopup">{{ section.settings.poppup_button_text }}</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}


{% endif %}

