{
  "name": "Single Blog",
  "settings": [
    {
      "type": "collection",
      "id": "related_collection",
      "label": "Related Product"
    }
  ],

  "presets": [
    {
      "name": "Single Blog"
    }
  ]
}
{% endschema %}
