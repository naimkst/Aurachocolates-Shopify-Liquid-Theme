<div class="header-Hero">
  <div class="landing-hero"></div>
  <div class="landingHeroBorder"></div>
  <div class="container">
    <div class="row">
      <div class="landingLogo">
        <div class="logoBox">
          <a href="/"><img
              src="{{ section.settings.landing_logo | img_url: '' }}"
              width="150"
              height="auto"
              alt=""
              loading="eager"></a>

          <div class="relative cartTab" id="cartTabs">
            <p class="">
              {{ cart.item_count }}
            </p>
            <svg
              stroke="#ea5329"
              fill="#ea5329"
              stroke-width="0"
              viewBox="0 0 24 24"
              class="cartIcon"
              height="1em"
              width="1em"
              xmlns="http://www.w3.org/2000/svg">
              <g>
                <path fill="none" d="M0 0h24v24H0z"></path>
                <path d="M4 16V4H2V2h3a1 1 0 0 1 1 1v12h12.438l2-8H8V5h13.72a1 1 0 0 1 .97 1.243l-2.5 10a1 1 0 0 1-.97.757H5a1 1 0 0 1-1-1zm2 7a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm12 0a2 2 0 1 1 0-4 2 2 0 0 1 0 4z"></path>
              </g>
            </svg>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<div id="catContainer" style="width: 300px; position:relative;">
<div class="cartHide">
  <div class="cartItems">
    <div>
      <div class="cartTab">
        <svg
          stroke="#3b1408"
          fill="#3b1408"
          stroke-width="0"
          viewBox="0 0 1024 1024"
          class=""
          height="30"
          width="30">
          <path d="M512 0C229.232 0 0 229.232 0 512c0 282.784 229.232 512 512 512 282.784 0 512-229.216 512-512C1024 229.232 794.784 0 512 0zm0 961.008c-247.024 0-448-201.984-448-449.01 0-247.024 200.976-448 448-448s448 200.977 448 448-200.976 449.01-448 449.01zm181.008-630.016c-12.496-12.496-32.752-12.496-45.248 0L512 466.752l-135.76-135.76c-12.496-12.496-32.752-12.496-45.264 0-12.496 12.496-12.496 32.752 0 45.248L466.736 512l-135.76 135.76c-12.496 12.48-12.496 32.769 0 45.249 12.496 12.496 32.752 12.496 45.264 0L512 557.249l135.76 135.76c12.496 12.496 32.752 12.496 45.248 0 12.496-12.48 12.496-32.769 0-45.249L557.248 512l135.76-135.76c12.512-12.512 12.512-32.768 0-45.248z">
        </svg>
      </div>
      <div>
        {% if cart.item_count != 0 %}
          <h2 class="cartTitle">Product Details</h2>
        {% else %}
          <h2 class="cartTitle">Cart is empty!</h2>
        {% endif %}
        <div class="cartItemLine">
          {% for item in cart.items %}
            <div class="cartBoxItem">

              <div class="imageWithTitle">
                {{ item | image_url: width: '80' | image_tag }}
                <div class="cartContent">
                  <a href="{{ item.url }}">{{ item.product.title }}</a>
                  <p>{{ item.quantity }} X {{ item.price | money }}</p>
                </div>
              </div>
              <div data-line="{{ forloop.index }}" class="removeProduct">
                <svg
                  stroke="currentColor"
                  fill="currentColor"
                  stroke-width="0"
                  viewBox="0 0 24 24"
                  class="text-secondary ml-0 mt-2 absolute right-1 top-0 cursor-pointer"
                  height="20"
                  width="20"
                  xmlns="http://www.w3.org/2000/svg">
                  <g>
                    <path fill="none" d="M0 0h24v24H0z"></path>
                    <path d="M12 10.586l4.95-4.95 1.414 1.414-4.95 4.95 4.95 4.95-1.414 1.414-4.95-4.95-4.95 4.95-1.414-1.414 4.95-4.95-4.95-4.95L7.05 5.636z"></path>
                  </g>
                </svg>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>

    <div class="checkoutButtonCart">
      <h2 class="subtotalTitle">
        Sub Total:{{- cart.currency.symbol -}}
        {{- cart.total_price | money_without_currency -}}</h2>
      <div class="flex justify-center items-center py-3">
        <a href="/cart" class="viewCartButton">View Cart</a>
      </div>
    </div>
  </div>
  </div>
</div>

{% schema %}
  {
    "name": "Landing Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "landing_logo",
        "label": "Landing Logo"
      }
    ],

    "presets": [
      {
        "name": "Landing Header"
      }
    ]
  }
{% endschema %}