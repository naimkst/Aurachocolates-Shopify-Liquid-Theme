<div style="background-image: url('{{ section.settings.footer_background_image | image_url: width: 1920 }}'); background-repeat: no-repeat; background-size: cover; background-position: center; padding-bottom: 350px; overflow-x: hidden;" class="landingFooter">
  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <img
          src="{{ section.settings.footer_logo | img_url: '200x200' }}"
          alt=""
          loading="eager"
          width="200"
          height="auto">
      </div>
      <div class="col-md-10">
        <p class="footerAbout">
          {{ section.settings.footer_about }}
        </p>

        <div class="row">
          <div class="col-md-4">
            <h2 class="footerMenuTitle">{{ section.settings.help_info_text }}</h2>
            <ul class="menuLink">
              {% for link in linklists[section.settings.help_menu].links -%}
                <li>
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {%- endfor %}
            </ul>
          </div>
          <div class="col-md-4">
            <h2 class="footerMenuTitle">{{ section.settings.quick_shop_text }}</h2>
            <ul class="menuLink">
              {% for link in linklists[section.settings.quick_menu].links -%}
                <li>
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {%- endfor %}
            </ul>
          </div>
          <div class="col-md-4">
            <h2 class="footerMenuTitle">{{ section.settings.contact_us }}</h2>
            <ul class="menuLink">
              <li>
                <a href="#">{{ section.settings.address }}</a>
              </li>
              <li>
                <a href="">{{ section.settings.phone }}</a>
              </li>
              <li>
                <a href="">{{ section.settings.email }}</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-5 ">
      <div class="d-flex justify-content-between align-items-center footerLogo">
        <div class="col-md-6 d-flex gap-3">
          <a href="#">
            <img
              src="{{ section.settings.certificate01 | img_url: '' }}"
              alt=""
              loading="eager"
              width="100"
              height="auto">
          </a>

          <a href="#">
            <img
              src="{{ section.settings.certificate02 | img_url: '' }}"
              alt=""
              loading="eager"
              width="100"
              height="auto">
          </a>
        </div>
        <div class="col-md-6 d-flex gap-2 justify-content-end">
          {% if section.settings.instagram != blank %}
            <a href="{{ section.settings.instagram }}">
              <img
                src="https://cdn.shopify.com/s/files/1/0696/0110/0049/files/instagram.webp?v=1700056633"
                alt=""
                loading="eager"
                width="40"
                height="40">
            </a>
          {% endif %}

          {% if section.settings.linkdin != blank %}
            <a href="{{ section.settings.linkdin }}">
              <img
                src="https://cdn.shopify.com/s/files/1/0696/0110/0049/files/linkdin.webp?v=1700056634"
                alt=""
                loading="eager"
                width="40"
                height="40">
            </a>
          {% endif %}

          {% if section.settings.tiktok != blank %}
            <a href="{{ section.settings.tiktok }}">
              <img
                src="https://cdn.shopify.com/s/files/1/0696/0110/0049/files/Tiktok.webp?v=1700056634"
                alt=""
                loading="eager"
                width="40"
                height="40">
            </a>
          {% endif %}

          {% if section.settings.facebook != blank %}
            <a href="{{ section.settings.facebook }}">
              <img
                src="https://cdn.shopify.com/s/files/1/0696/0110/0049/files/Facebook.webp?v=1700056634"
                alt=""
                loading="eager"
                width="40"
                height="40">
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="landing-footerBG"></div>


