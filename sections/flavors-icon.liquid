<style>
  .promiseGrid {
    display: flex;
    justify-content: space-around;
    gap: 20px;
    align-items: center;
  }
  .promiseGrid div {
    width: 100%;
  }
  .promiseGrid h3 {
    font-size: 30px !important;
  }

  @media screen and (max-width: 768px) {
    .promiseGrid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-gap: 10px;
      justify-content: center;
      padding-top: 10px !important;
    }
    .promiseGrid div {
      padding: 0;
      margin: 0;
    }
    .promiseGrid .boxShadow {
      padding: 15px 10px 10px;
    }
    .promiseGrid img {
      width: 30px;
    }
    .promiseGrid h3 {
      font-size: 12px !important;
      line-height: 20px !important;
    }
    .lastGridItem {
      grid-column: 1 / span 2;
      grid-row: 3;
    }
    .lastGridItem {
      width: 50% !important;
      margin: 0 auto !important;
    }

  }
</style>
<div class="py-20 tablet:px-3 phone:overflow-hidden laptop:px-4">
  <div class="container m-auto">
    <div class="text-center max-w-[750px] m-auto">
      <h2 class="section-title border-b-primary border-b-4 inline-block mb-11">{{ section.settings.promise_title }}</h2>
      <p class="section-content font-light leading-[1.7]">
        {{ section.settings.promise_description }}
      </p>
    </div>
    <div class="pt-[40px] grid grid-cols-3 items-stretch gap-10 text-center laptop:gap-4 tablet:grid-cols-1 promiseGrid">
      {% for block in section.blocks %}
        <div class="boxShadow bg-white py-14 rounded-lg px-7 {% if forloop.last %} lastGridItem {% endif %}">
          <div>
            <img
              src="{{ block.settings.promise_item_image | img_url: 'original' }}"
              width="120"
              alt="gift"
              class="text-center inline-block">
          </div>
          <h3 class="section-title !text-[35px] !font-bold">{{ block.settings.promise_item_title }}</h3>
          <p class="content !text-[22px]">
            {{ block.settings.promise_item_description }}
          </p>
        </div>
      {% endfor %}
    </div>

    <div>
      <div class="text-center mt-10">
        <p class="section-content">{{ section.settings.flavor_note }}</p>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Flavors Icon Section",
    "settings": [
      {
        "type": "text",
        "id": "promise_title",
        "label": "Title",
        "default": "Our Promise"
      },
      {
        "type": "text",
        "id": "promise_description",
        "label": "Description",
        "default": "There is a reason we have established a strong following in Montreal and all over the world for our beloved Kosher artisanal Belgium chocolates."
      },
      {
        "type": "text",
        "id": "flavor_note",
        "label": "Flavor Note",
        "default": "*please note that all of our chocolates are..."
      }
    ],
    "blocks": [
      {
        "name": "Promise Item",
        "type": "slider",
        "settings": [
          {
            "type": "text",
            "id": "promise_item_title",
            "label": "Promise Title",
            "default": "Sensational Selection"
          },
          {
            "type": "text",
            "id": "promise_item_description",
            "label": "Promise Description",
            "default": "Have an occasion? Have a particular taste or color in mind? Trying to stay within budget? Our vast selection boasts many options that will surely fit your needs."
          },
          {
            "type": "image_picker",
            "id": "promise_item_image",
            "label": "Image"
          }
        ]
      }
    ],

    "presets": [
      {
        "name": "Flavors Icon Section",
        "blocks": [
          {
            "type": "slider"
          }
        ]
      }
    ]
  }
{% endschema %}