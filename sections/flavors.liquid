<style>
  .flavors .section-title {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 40px 0;
  }
  .flavors .section-title h2 {
    font-size: 44px;
    font-weight: 700;
  }
  .flavors .section-title p {
    font-size: 18px;
    line-height: 28px;
  }
  .featureImage {
    width: 100%;
    height: 210px;
    object-fit: cover;
    border-radius: 10px;
    z-index: 1;
  }
  .hoverImage {
    display: none;
    width: 100%;
    height: 210px;
    object-fit: cover;
    border-radius: 10px;
    z-index: 1;
  }
  .flavors-grid:hover {
    cursor: pointer;
  }
  .flavors-grid:hover .featureImage {
    display: none;
    cursor: pointer;
  }
  .flavors-grid:hover .hoverImage {
    display: block;
    cursor: pointer;
  }
  .gridItems {
    display: grid;
    grid-gap: 20px;
    grid-auto-flow: dense;
    grid-template-columns: repeat(5, 1fr);

  }
  .flavors-icon img {
    /* filter: brightness(0) invert(1); */
    background: #fff;
    padding: 3px;
    border-radius: 50px;
  }
  .flavors-item {
    margin-bottom: 100px;
  }

  @media only screen and (max-width: 800px) {
    .gridItems {
      grid-gap: 10px;
      grid-template-columns: repeat(2, 1fr);

    }
    .flavors .section-title h2 {
      font-size: 32px;
      text-align: center;
    }
    .flavors {
      padding: 0 10px;
    }
    .flavors-grid {
      padding: 10px 10px 20px;
    }
  }
  @media only screen and (max-width: 500px) {
    .gridItems {
      grid-gap: 10px;
      grid-template-columns: repeat(2, 1fr);
    }
    .featureImage,
    .hoverImage {
      height: 130px;
    }
    .flavors-grid {
      margin-bottom: 10px;
    }

  }
</style>

<div class="container m-auto flavors">
  <div class="section-title">
    <h2 class="title-lx">{{ section.settings.secton_title }}</h2>
    <p>{{ section.settings.section_subtitle }}</p>
  </div>

  {% assign collect = collections | sort_natural: sortBy %}

  <div class="flavors-products">
    {% for collection in collect %}
      {% if collection.products.size != 0 %}
        {% if collection.title == "Tutti Fruity" or collection.title == "Mini Logs" %}
          <div class="flavors-item mb-10">
            <h2 class="text-[25px] font-bold mb-5">{{ collection.title }}</h2>
            <div class="gridItems">
              {% for product in collection.products %}
                <div class="flavors-grid relative shadow-md rounded-md group">
                  <div class="flavors-icon absolute top-2 right-2 flex items-center justify-end gap-2 z-50">
                    {% if product.metafields.custom.alcohol.value == true %}
                      <img
                        class=""
                        src="{{ 'cocktail.png' |  asset_url }}"
                        width="30px"
                        height="30px"
                        alt="">
                    {% endif %}

                    {% if product.metafields.custom.gluten_free.value == true %}
                      <img
                        class=""
                        src="{{ 'wheat.png' |  asset_url }}"
                        width="30px"
                        height="30px"
                        alt="">
                    {% endif %}

                    {% if product.metafields.custom.nut_free.value == true %}
                      <img
                        class=""
                        src="{{ 'nut.png' |  asset_url }}"
                        width="30px"
                        height="30px"
                        alt="">
                    {% endif %}

                    {% if product.metafields.custom.dairy.value == true %}
                      <img
                        class=""
                        src="{{ 'cow.png' |  asset_url }}"
                        width="30px"
                        height="30px"
                        alt="">
                    {% endif %}

                    {% if product.metafields.custom.vegan == true %}
                      <img
                        class=""
                        src="{{ 'vegan.png' |  asset_url }}"
                        width="30px"
                        height="30px"
                        alt="">
                    {% endif %}

                  </div>
                  <img
                    class="featureImage"
                    src="{{ product.featured_image | image_url: width: 500  }}"
                    width=""
                    height=""
                    alt="">

                  {% if product.images[1] %}
                    <img
                      class="hoverImage"
                      src="{{ product.images[1] | image_url: width: 500 }}"
                      width=""
                      height=""
                      alt="">
                  {% else %}
                    <img
                      class="hoverImage"
                      src="{{ product.featured_image | image_url: width: 500  }}"
                      width=""
                      height=""
                      alt="">
                  {% endif %}

                  <div class="flvors-content px-3 py-5">
                    <h2 class="text-center text-[18px] font-bold my-4">
                      {{ product.title }}
                    </h2>
                    <p class="text-center text-[14px] mt-2">{{ product.description | strip_html | truncate: "80" }}</p>
                  </div>

                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      {% endif %}

    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Discover Our Flavors",
    "settings": [
      {
        "type": "text",
        "id": "secton_title",
        "label": "Section Title",
        "default": "Discover Our Flavors"
      },
      {
        "type": "text",
        "id": "section_subtitle",
        "label": "Section Subtitle",
        "default": "All hand made in our factory"
      }
    ],
    "presets": [
      {
        "name": "Discover Our Flavors"
      }
    ]
  }
{% endschema %}